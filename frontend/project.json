{
  "name": "penny-technical-assessment",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "frontend/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/frontend",
        "index": "frontend/src/index.html",
        "browser": "frontend/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "frontend/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "frontend/public"
          }
        ],
        "styles": ["frontend/src/styles.css"],
        "scripts": [],
        "server": "frontend/src/main.server.ts",
        "prerender": true,
        "ssr": {
          "entry": "frontend/server.ts"
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "penny-technical-assessment:build:production"
        },
        "development": {
          "buildTarget": "penny-technical-assessment:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "penny-technical-assessment:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "frontend/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "penny-technical-assessment:build",
        "staticFilePath": "dist/frontend/browser",
        "spa": true
      }
    }
  }
}
